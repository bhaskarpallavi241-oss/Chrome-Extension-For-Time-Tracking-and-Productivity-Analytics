{
  "manifest_version": 3,
  "name": "Time Tracker & Productivity",
  "version": "1.0",
  "permissions": ["tabs", "storage", "idle"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["<all_urls>"]
}
